#!/bin/bash
# Pre-commit git hook
# Runs code quality checks before allowing commit

set -e

echo ""
echo "╔════════════════════════════════════════╗"
echo "║     Running Pre-Commit Quality Checks     ║"
echo "╚════════════════════════════════════════╝"
echo ""

# Color codes
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check 1: Spotless Format - Auto-Apply
echo -e "${YELLOW}[1/3] Applying code formatting with Spotless...${NC}"
if ./gradlew spotlessApply --no-daemon --quiet 2>/dev/null; then
    echo -e "${GREEN}✓ Spotless formatting applied${NC}"
    # Spotless may have modified files; ask the developer to review and stage them explicitly
    echo -e "${YELLOW}Spotless may have changed files. Please review and stage formatting changes before committing.${NC}"
else
    echo -e "${RED}✗ Spotless formatting failed!${NC}"
    echo ""
    echo "Please review the error and try again."
    echo ""
    exit 1
fi

echo ""

# Check 2: Checkstyle
echo -e "${YELLOW}[2/3] Running Checkstyle validation...${NC}"
if ./gradlew checkstyleMain --no-daemon --quiet 2>/dev/null; then
    echo -e "${GREEN}✓ Checkstyle passed${NC}"
else
    echo -e "${RED}✗ Checkstyle violations found!${NC}"
    echo ""
    echo "Review: build/reports/checkstyle/main.html"
    echo "Please fix the violations and commit again."
    echo ""
    exit 1
fi

echo ""

# Check 3: SpotBugs (warning only)
echo -e "${YELLOW}[3/3] Running SpotBugs analysis...${NC}"
if ./gradlew spotbugsMain --no-daemon --quiet 2>/dev/null; then
    echo -e "${GREEN}✓ SpotBugs analysis complete (no critical issues)${NC}"
else
    echo -e "${YELLOW}⚠ SpotBugs found potential issues (review-only)${NC}"
    echo "Review: build/reports/spotbugs/main.html"
fi

echo ""
echo "╔════════════════════════════════════════╗"
echo "║   ✓ All checks passed! Commit allowed.   ║"
echo "╚════════════════════════════════════════╝"
echo ""

exit 0
